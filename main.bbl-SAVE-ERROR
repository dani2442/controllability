      \strng{namehash}{6bc6b8190609c859cf2f575c51e9f542}
      \strng{fullhash}{4d916012e24cc795b5237374a0cfdd15}
      \strng{bibnamehash}{6bc6b8190609c859cf2f575c51e9f542}
      \strng{authorbibnamehash}{6bc6b8190609c859cf2f575c51e9f542}
